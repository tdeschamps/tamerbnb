 <div class="form-container">
  <div class='col-xs-4 col-xs-offset-2'>
    <h1 >Create your profile</h1>
    <%= form_for @user do |form|%>

      <div class="form-group col-sm-10"
         <%= form.label :picture %>
         <%= form.file_field :picture %>
       </div>

      <div class="form-group col-sm-10">
          <%= form.label :user_name %>
          <%= form.text_field :user_name, class: "form-control" %>
      </div>

      <div class="form-group col-sm-10">
          <%= form.label :password %>
          <%= form.text_field :password, class: "form-control" %>
      </div>

      <div class="form-group col-sm-10">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: "form-control" %>
      </div>

      <div class="form-group col-sm-10">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: "form-control" %>
      </div>

      <div class="form-group col-sm-10">
          <%= form.label :email_address %>
          <%= form.email_field :email_address, class: "form-control"%>
      </div>

      <div class="form-group col-sm-10">
          <%= form.label :bio %>
          <%= form.text_area :bio, cols: 10, cols: 4, class: "form-control"%>
      </div>

      <div class="form-group col-sm-10">
         <%= form.label :birth_date %>
         <%= form.datetime_field :birth_date, class: "form-control"%>
      </div>

      <div class="form-group col-sm-10">
          <%= form.submit class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>