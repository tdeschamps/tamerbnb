

<div class="form-container">
  <div class="row">
    <div class="col-xs-offset-2 col-xs-4">
      <h1>Sign up Gangsta</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group col-sm-10">
          <%= f.label :picture %><br />
          <%= f.file_field :picture, autofocus: true%>
        </div>

         <div class="form-group col-sm-10">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control col-xs-4" %>
        </div>
         <div class="form-group col-sm-10">
              <%= f.label :user_name %>
              <%= f.text_field :user_name, class: "form-control col-xs-4" %>
          </div>

          <div class="form-group col-sm-10">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: "form-control col-xs-4" %>
          </div>

          <div class="form-group col-sm-10">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: "form-control col-xs-4" %>
          </div>

          <div class="form-group col-sm-10">
              <%= f.label :bio %>
              <%= f.text_area :bio, rows: 4, cols: 6, class: "form-control col-xs-4"%>
          </div>

          <div class="form-group col-sm-10">
             <%= f.label :birth_date %>
             <%= f.date_field :birth_date, class: "form-control col-xs-4"%>
          </div>

         <div class="form-group col-sm-10">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control col-xs-4" %>
         </div>

         <div class="form-group col-sm-10">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control col-xs-4" %>
        </div>

        <div class="form-group col-sm-10">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>